<odoo>
    <record id="action_update_prices_based_on_pricelist" model="ir.actions.server">
        <field name="name">Update Prices Based on Pricelist</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">action = env['sale.order'].browse(record.ids).update_prices_based_on_pricelist()</field>
    </record>

    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/header[1]/field[@name='state']" position="after">
                <button string="Calculer la liste de prix" name="%(action_update_prices_based_on_pricelist)d" type="action" class="btn-info" confirm="Le calcul du prix sera appliquÃ© sur les produits"/>
            </xpath>
        </field>
    </record>
</odoo>
