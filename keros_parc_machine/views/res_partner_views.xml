<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.parc.machine</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" icon="fa-caret-square-o-right" name="action_get_machines_record">
                    <field string="Machines" name="machine_count" widget="statinfo"/>
                </button>
            </div>

        </field>
    </record>


</odoo>
